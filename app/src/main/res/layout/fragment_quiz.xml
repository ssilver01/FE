<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black2"
    tools:context=".ui.quiz.QuizFragment">

    <TextView
        android:id="@+id/tv_quiz_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:text="다크 패턴이란?"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="137dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/v_quiz_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_quiz_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_quiz_ment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="다크패턴에 대한 설명이 들어갈 부분입니다. 다크패턴에 대한 설명이 들어갈 부분입니다. 다크패턴에 대한 설명이 들어갈 부분입니다. 다크패턴에 대한 설명이 들어갈 부분입니다. 다크패턴에 대한 설명이 들어갈 부분입니다. 다크패턴에 대한 설명이 들어갈 부분입니다. 다크패턴에 대한 설명이 들어갈 부분입니다."
        android:textColor="@color/white"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_quiz_1"/>


    <View
        android:id="@+id/v_quiz_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@id/tv_quiz_ment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_quiz_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="퀴즈 풀러 가기"
        android:textColor="@color/black2"
        android:background="@drawable/backgroundp1"
        android:paddingVertical="10dp"
        android:paddingHorizontal="130dp"
        android:layout_marginBottom="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>