<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black2">
    
    <TextView
        android:id="@+id/tv_wrong_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:text="나의 오답노트 보기"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="204dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <View
        android:id="@+id/v_wrong_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_wrong_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_wrong_ment"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:text="틀린 문제들을 다시 풀고,"
        android:textColor="@color/white"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_wrong_1"/>

    <TextView
        android:id="@+id/tv_wrong_ment2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:text="UX/UI 및 다크 패턴에 대해서 복습해봅시다."
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_wrong_ment"/>

    <View
        android:id="@+id/v_wrong_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_wrong_ment2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <View
        android:id="@+id/v_wrong_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="173dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/v_wrong_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/backgroundp1"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:text="오답노트 다시 풀기"
        android:textColor="@color/black2"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/v_wrong_btn"
        app:layout_constraintEnd_toEndOf="@id/v_wrong_btn"
        app:layout_constraintTop_toTopOf="@id/v_wrong_btn"
        app:layout_constraintBottom_toBottomOf="@id/v_wrong_btn"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>